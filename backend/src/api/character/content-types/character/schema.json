{
  "kind": "collectionType",
  "collectionName": "characters",
  "info": {
    "singularName": "character",
    "pluralName": "characters",
    "displayName": "Character",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "character_id": {
      "type": "uid",
      "targetField": "name"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "laconic_description": {
      "type": "text"
    },
    "profile_images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "faction": {
      "type": "enumeration",
      "enum": [
        "golden_palanquin",
        "kingdom",
        "essence",
        "first_darkness",
        "second_darkness",
        "third_darkness",
        "old_gods"
      ],
      "required": true
    },
    "biography": {
      "type": "richtext"
    },
    "music_album": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::music-album.music-album",
      "inversedBy": "characters"
    },
    "character_quote": {
      "type": "string"
    }
  }
}
